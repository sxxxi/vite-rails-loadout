<h1>Login</h1>

<%= form_with url: sessions_create_path, method: :post do |form| %>
  <table>
    <tbody>

      <tr>
        <td><%= form.label :username %></td>
        <td><%= form.text_field :username %></td>
      </tr>

      <tr>
        <td><%= form.label :password %></td>
        <td><%= form.password_field :password %></td>
      </tr>

      <tr>
        <td><%= form.submit "Login" %></td>
      </tr>
    </tbody>
  </table>
<% end %>
