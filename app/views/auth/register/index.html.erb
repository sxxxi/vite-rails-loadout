<%= form_with model: @user do |form| %>
  <% if @user.errors.any? %>
    <div class="bg-red-50 rounded p-4 flex flex-col justify-start items-start">
      <% @user.errors.full_messages.each do |message| %>
        <span class="text-red-500"><%= message %></span>

      <% end %>
    </div>
  <% end %>
  <div class="grid grid-cols-2 w-80">

    <div>
      <%= form.label :username %>
      <%= form.text_field :username, required: true %>
    </div>

    <div>
      <%= form.label :password %>
      <%= form.password_field :password %>
    </div>

    <div>
      <%= form.label :password_confirmation %>
      <%= form.password_field :password_confirmation %>
    </div>

    <%= form.submit "kill me", class: "btn btn-primary col-span-full" %>
  </div>
<% end %>
